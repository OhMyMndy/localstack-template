    "version": "0.2.0",
    "configurations": [
        {
            "type": "node-terminal",
            "name": "Docker compose up",
            "command": "docker compose up -d",
            "cwd": "${workspaceFolder}/",
            "request": "launch",
        },{
            "type": "node-terminal",
            "name": "Terraform init",
            "command": "tflocal init",
            "cwd": "${workspaceFolder}/terraform",
            "request": "launch",
        },
        {
            "type": "node-terminal",
            "name": "Terraform plan",
            "command": "tflocal plan",
            "cwd": "${workspaceFolder}/terraform",
            "request": "launch",
        },
        {
            "type": "node-terminal",
            "name": "Terraform apply",
            "command": "tflocal apply",
            "cwd": "${workspaceFolder}/terraform",
            "request": "launch",
        },
        {
            "type": "node-terminal",
            "name": "Test lambda function",
            "command": "awslocal lambda invoke --function-name create-report --payload '{\"region\": \"eu-central-1\"}' --invocation-type RequestResponse response.json; cat response.json | jq",
            "cwd": "${workspaceFolder}/terraform",
            "request": "launch",
        },
        {
            "type": "node-terminal",
            "name": "Github Actions Deploy",
            "command": "act ",
            "cwd": "${workspaceFolder}/",
            "request": "launch",
        }
    ]
}